<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Appronto</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <style>
        body {
            background-color: #ECEFF1; /* Bege claro */
        }

        .navbar {
            background-color: #1A237E; /* Verde-musgo */
        }

        .text-hero {
            color: #1A237E;
            font-weight: bold;
        }

        .card-imovel {
            background-color: #FFFFFF;
            border: 2px solid #1A237E;
            border-radius: 8px;
        }

        .footer {
            background-color: #1A237E;
            color: #FFFFFF;
        }
    </style>


</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color: #1A237E;">
        <div class="container">
            <a class="navbar-brand text-white" href="/"><i class="bi bi-house-heart"></i> Appronto</a>

            <span class="text-white mx-3">|</span>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Imoveis">Imóveis</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Anunciar">Anunciar</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Favoritos">
                            <i class="bi bi-heart-fill me-1"></i> Favoritos
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="btn btn-outline-light ms-2" href="/Login">Entrar</a>
                    </li>
                </ul>
            </div>          
        </div>
    </nav>

    <main class="container py-4" style="background-color: #ECEFF1;">
        @RenderBody()
    </main>

    <footer class="footer text-center py-4 mt-5">
        <span>&copy; @DateTime.Now.Year - Appronto. Todos os direitos reservados.</span>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
